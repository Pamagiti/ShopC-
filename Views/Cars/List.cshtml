<h1>Все автомобили</h1>
<h3>@Model.currCatogory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (var car in Model.AllCars) {
    <div class="col-lg-4">
        <img class="img-thumbnail" scr="@car.img" alt="@car.name" />
        <h2>@car.name</h2>
        <p>@car.shortDesc</p>
        <p>Цена: @car.price.ToString("c")</p>
        <p><a class="btn btn-warning" href="#">Details</a></p>
    </div>
        }
    }
</div>